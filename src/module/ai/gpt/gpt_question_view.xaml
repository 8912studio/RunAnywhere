<GPTQuestionView AutoHeight="true">

    <HorizontalBox 
        Name="hintContainer"
        FixedHeight="30" 
        CrossAxisAlignment="Center">

		<Label
            FixedSize="26,18"
            TextAlignment="Center"
            ParagraphAlignment="Center"
			TextColor="White" 
			BackgroundColor="#10A37F"
            FontSize="10"
            Text="GPT">
		</Label>

		<Label
            Name="messageLabel"
            Margin="6,0,0,0"
            ParagraphAlignment="Center"
			TextColor="#808080"
            FontSize="14"
            Text="Start a new dialog with question:">
		</Label>
        
    </HorizontalBox>
    
    <TextContentControl Name="questionControl" IsVisible="false" />

    <VerticalBox 
        Name="errorContainer" 
        FixedHeight="90"
        AxisAlignment="Center"
        CrossAxisAlignment="Center"
        IsVisible="false">
        
        <ErrorView Name="errorView" AutoHeight="true" />

        <LinkButton 
            Name="openOptionButton" 
            AutoWidth="true" 
            FixedHeight="30"
            Margin="0,4,0,0"
            FontSize="14"
            Text="Provide in option window"
            IsVisible="false" />

    </VerticalBox>

</GPTQuestionView>