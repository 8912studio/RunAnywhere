<DialogView Layouter="VerticalLayouter" BackgroundColor="White">

    <ThinScrollControl 
		Name="roundScrollBox"
		UseOverlayScrollBars="true" 
		AutoHideScrollBars="true">

        <CompositeTextBox 
			Name="roundListView"
			AutoHeight="true"
			Margin="15,0,15,10"
			Layouter="VerticalLayouter" />

    </ThinScrollControl>

    <Control FixedHeight="1" Margin="15,0,15,0" BackgroundColor="#CCCCCC" />

    <HorizontalBox 
		Name="bottomContainer" 
		Margin="15,5,15,5"
		CrossAxisAlignment="End">
        <ThinScrollControl
			AllowHorizontalScroll="false"
			UseOverlayScrollBars="true">
            <TextBox
				Name="inputEdit"
				Padding="0,10,0,10"
				IsEditable="true"
				WordWrapping="Wrap"
				FontSize="14" />
        </ThinScrollControl>
        <Button 
			Name="sendButton"
			Border="0"
			BackgroundColor="Transparent"
			BackgroundImageLayout="Stretch"
			FixedSize="30,30"
			Margin="5,0,0,4"
			Tooltip="Send question"
			CanFocused="false"
			IsEnabled="false" />
    </HorizontalBox>
</DialogView>