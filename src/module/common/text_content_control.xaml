<TextContentControl Layouter="VerticalLayouter">
	<ScrollBox
        Name="scrollControl" 
        Border="0"
        VerticalScrollBarThickness="15"
        HorizontalScrollBarThickness="10">

		<ScrollBox.VerticalScrollBar>
            <ThinScrollBar />
        </ScrollBox.VerticalScrollBar>

		<ScrollBox.HorizontalScrollBar>
            <ThinScrollBar />
        </ScrollBox.HorizontalScrollBar>

		<ScrollBox.ScrollContent>
            <TextBox 
                Name="textBox" 
				IsEditable="false"
                Border="0"
                BackgroundColor="#00000000"
                FontSize="18"
                ParagraphAlignment="Center" />
        </ScrollBox.ScrollContent>
    </ScrollBox>
</TextContentControl>