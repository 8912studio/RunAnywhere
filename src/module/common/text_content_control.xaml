<TextContentControl Layouter="VerticalLayouter">
    <ScrollableControl 
        Name="scrollControl" 
        Border="0"
        VerticalScrollBarThickness="15"
        HorizontalScrollBarThickness="10">

        <ScrollableControl.VerticalScrollBar>
            <ThinScrollBar />
        </ScrollableControl.VerticalScrollBar>

        <ScrollableControl.HorizontalScrollBar>
            <ThinScrollBar />
        </ScrollableControl.HorizontalScrollBar>

        <ScrollableControl.ScrollContent>
            <TextBox 
                Name="textBox" 
                Border="0"
                BackgroundColor="#00000000"
                FontSize="18"
                ParagraphAlignment="Center" />
        </ScrollableControl.ScrollContent>
    </ScrollableControl>
</TextContentControl>