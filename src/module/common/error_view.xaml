        Name="errorIcon"
        FixedSize="48,48"
        Margin="0,0,10,0"
        BackgroundImage="res:///resource/error.png"
        BackgroundImageLayout="Stretch"
    />
    <Label 
        Name="textLabel" 
        AutoSize="true" 
        TextAlignment="Center" 
        ParagraphAligment="Center" 
        FontSize="22"
    />
</ErrorView>