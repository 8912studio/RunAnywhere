<ExtensionCommandPreviewControl
    Layouter="VerticalLayouter"
    Margin="0,10,0,10"
    AutoHeight="true"
>
    <ScrollableControl 
        Name="scrollControl" 
        Border="0" 
        AllowHorizontalScroll="false">
        <ScrollableControl.ScrollContentControl>
            <TextBox 
                Name="textBox" 
                Border="0"
                IsMultiline="true" 
                FontSize="14"
                WordWrapping="Wrap"
            />
        </ScrollableControl.ScrollContentControl>
    </ScrollableControl>
</ExtensionCommandPreviewControl>