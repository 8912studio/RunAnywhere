<ExtensionCommandPreviewControl
    Layouter="VerticalLayouter"
    Margin="0,10,0,10"
    AutoHeight="true"
>
    <ScrollableControl 
        Name="scrollControl" 
        Border="0" 
        AllowHorizontalScroll="false"
        ScrollBarThickness="12">
        <ScrollableControl.ScrollContent>
            <RichEdit 
                Name="textBox" 
                Border="0"
                IsMultiline="true" 
                FontSize="14"
                WordWrapping="Wrap"
            />
        </ScrollableControl.ScrollContent>
    </ScrollableControl>
</ExtensionCommandPreviewControl>