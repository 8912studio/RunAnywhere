<RoundView AutoHeight="true" Margin="0,10,0,10">
	<VerticalBox Name="questionView" AutoHeight="true">
		<HorizontalBox FixedHeight="30" CrossAxisAlignment="Center">
			<Label
				FixedSize="26,18"
				TextAlignment="Center"
				ParagraphAlignment="Center"
				TextColor="White"
				BackgroundColor="#512DA8"
				FontSize="10"
				Text="You" />
		</HorizontalBox>
		<StyledTextBox 
			Name="questionContent"
			AutoHeight="true"
			WordWrapping="Wrap"
			FontSize="14" />
	</VerticalBox>
	<AnswerView Name="answerView" Margin="0,20,0,0" />
	<HorizontalBox FixedHeight="14" Margin="0,10,0,0">
		<HorizontalBox Name="toolbar" IsVisible="false">
			<ToolbarButton 
				Name="copyButton" 
				Margin="0,0,10,0"
				ImageName="copy" 
				Tooltip="Copy result to clipboard" />
			<ToolbarButton
				Name="retryButton"
				Margin="0,0,10,0" 
				BackgroundColor="Gray"
				Tooltip="Retry"/>
			<ToolbarButton
				Name="removeButton"
				ImageName="close"
				Tooltip="Remove this round" />
		</HorizontalBox>
	</HorizontalBox>
</RoundView>