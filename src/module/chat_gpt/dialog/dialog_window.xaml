<DialogWindow>
	<DialogWindow.RootControl>
		<VerticalBox BackgroundColor="White" />	
	</DialogWindow.RootControl>

	<ThinScrollControl 
		Name="roundScrollControl"
		UseOverlayScrollBars="true" 
		AutoHideScrollBars="true">
		
		<ThinScrollControl.ScrollContent>
			<VerticalBox 
				Name="roundListView"
				AutoHeight="true"
				Margin="15,0,15,0"/>
		</ThinScrollControl.ScrollContent>
	</ThinScrollControl>

	<Control FixedHeight="1" Margin="15,0,15,5" BackgroundColor="#CCCCCC" />
	
	<ThinScrollControl
		Name="inputContainer"
		AllowHorizontalScroll="false"
		UseOverlayScrollBars="true">
		<ThinScrollControl.ScrollContent>
			<RichEdit
				Name="inputEdit"
				Border="0" 
				Padding="15,15,15,15"
				IsMultiline="true"
				WordWrapping="Wrap"
				FontSize="14" />
		</ThinScrollControl.ScrollContent>
	</ThinScrollControl>

</DialogWindow>