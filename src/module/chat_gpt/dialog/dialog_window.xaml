<DialogWindow ContentSize="600,600">
	<DialogWindow.RootControl>
		<VerticalBox BackgroundColor="White" />	
	</DialogWindow.RootControl>

	<ThinScrollControl 
		Name="roundScrollBox"
		UseOverlayScrollBars="true" 
		AutoHideScrollBars="true">

		<CompositeTextBox 
			Name="roundListView"
			AutoHeight="true"
			Margin="15,0,15,10"
			Layouter="VerticalLayouter" />
		
	</ThinScrollControl>

	<Control FixedHeight="1" Margin="15,0,15,0" BackgroundColor="#CCCCCC" />
	
	<ThinScrollControl
		Name="inputContainer"
		AllowHorizontalScroll="false"
		UseOverlayScrollBars="true">
		
		<RichEdit
			Name="inputEdit"
			Border="0" 
			Padding="15,15,15,15"
			IsMultiline="true"
			WordWrapping="Wrap"
			FontSize="14" />
		
	</ThinScrollControl>

</DialogWindow>