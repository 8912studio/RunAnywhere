<ImportBundleWindow 
    IsSizable="false"
    CanMaximize="false"
    ContentSize="400,160"
    Title="Import">

    <ImportBundleWindow.RootControl>
        <VerticalBox Layouter="VerticalLayouter" />
    </ImportBundleWindow.RootControl>

    <VerticalBox 
        Name="container" 
        AutoHeight="true" 
        Padding="25,25,25,20" 
        BackgroundColor="White">
        
        <HorizontalBox AutoHeight="true">
            <ImageBox Name="iconImage" FixedSize="48,48" />
            <VerticalBox Margin="15,0,0,0" AutoHeight="true" >
                <Label
                    Name="titleLabel"
                    AutoHeight="true"
                    TextAlignment="Left" 
                    ParagraphAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    WordWrapping="Wrap"
                    />
                <Label 
                    Name="messageLabel" 
                    AutoHeight="true"
                    Margin="0,5,0,0"
                    TextAlignment="Left" 
                    ParagraphAlignment="Center"
                    FontSize="12" />
            </VerticalBox>
        </HorizontalBox>
    
        <HorizontalBox Margin="0,32,0,0" AutoHeight="true">
            <Control />
            <Button Name="okButton" FixedSize="100,30" />
            <Button Name="cancelButton" Margin="10,0,0,0" FixedSize="100,30" Text="Cancel" />
        </HorizontalBox>
    </VerticalBox>

</ImportBundleWindow>