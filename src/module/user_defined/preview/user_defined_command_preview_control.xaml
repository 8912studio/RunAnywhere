<UserDefinedCommandPreviewControl Layouter="VerticalLayouter" AutoHeight="true">
    <HorizontalBox CrossAxisAlignment="Center" AutoHeight="true">
        <ImageBox FixedSize="20,20" ImageLayout="Stretch" URI="res:///resource/file.png" />
        <Label 
            Name="entryInfoLabel" 
            FixedHeight="30" 
            Margin="6,0,0,0"
            ParagraphAlignment="Center" 
            TextColor="#808080"
            FontSize="14" />
    </HorizontalBox>
	<ThinScrollControl Name="scrollContainer" AllowHorizontalScroll="false">
		<ThinScrollControl.ScrollContent>
			<VerticalBox Name="scrollContent" AxisAlignment="Center">
				<VerticalBox Name="commandContainer" AutoHeight="true">
					<Label Name="commandLabel" ParagraphAlignment="Center" />
					<VerticalBox Name="argumentContainer" AutoHeight="true" />
					<Label Name="workingDirectoryLabel" ParagraphAlignment="Center" TextColor="Gray" />
				</VerticalBox>
			</VerticalBox>
		</ThinScrollControl.ScrollContent>
	</ThinScrollControl>    
</UserDefinedCommandPreviewControl>