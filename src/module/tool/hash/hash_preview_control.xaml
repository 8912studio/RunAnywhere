<HashPreviewControl Layouter="VerticalLayouter" AutoHeight="true">
    <HorizontalBox AutoHeight="true" Margin="15,0,15,0" CrossAxisAlignment="Center" >
        <Label 
            Name="algorithmLabel"         
            FixedSize="26,18"
            Margin="0,0,6,0"
            TextAlignment="Center"
            ParagraphAlignment="Center"
            FontSize="11"
            TextColor="White"
            BackgroundColor="#79A3EF" />
        <ContentStatusBar Name="contentStatusBar" />
    </HorizontalBox>
    <TextContentControl Name="hashResultControl" Margin="15,0,0,0" IsVisible="false" />
    <ProgressCircle 
        Name="progressCircle" 
        FixedHeight="90" 
        Padding="0,20,0,20" 
        Margin="15,0,15,0" 
        IsVisible="false" />
    <ErrorView Name="errorView" Margin="15,0,15,0" IsVisible="false" />
</HashPreviewControl>