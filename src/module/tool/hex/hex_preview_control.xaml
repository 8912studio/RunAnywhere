        Name="filePathLabel" 
        FixedHeight="20"
        Margin="10,0,10,0"
        ParagraphAlignment="Center"
        FontSize="14" 
        TextColor="#808080" 
    />
    <Label 
        Name="fileInfoLabel" 
        FixedHeight="30"
        Margin="10,0,10,0"
        ParagraphAlignment="Center"
        FontSize="12" 
        TextColor="#808080" 
    />
    <BinaryContentControl Name="binaryContent" />
