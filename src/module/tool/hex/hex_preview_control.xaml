<HexPreviewControl Layouter="VerticalLayouter" AutoHeight="true">
    <Label 
        Name="filePathLabel" 
        FixedHeight="20"
        Margin="8,0,8,0"
        ParagraphAlignment="Center"
        FontSize="14" 
        TextColor="#808080" 
    />
    <Label 
        Name="fileInfoLabel" 
        FixedHeight="30"
        Margin="8,0,8,0"
        ParagraphAlignment="Center"
        FontSize="12" 
        TextColor="#808080" 
    />
    <VerticalBox Name="contentContainer" AutoHeight="true">
        <HexColumnHeaderControl Name="columnHeaderControl" />
        <ScrollableControl 
            Name="scrollControl"
            Border="0" 
            AllowHorizontalScroll="false"
            AutoScrollContentHeight="true"
            ScrollBarThickness="6"
        >
            <ScrollableControl.ScrollContent>
                <HexContentControl Name="contentControl" AutoHeight="true" />
            </ScrollableControl.ScrollContent>
        </ScrollableControl>
    </VerticalBox>
    <ErrorView Name="errorView" AutoHeight="true" Margin="0,30,0,30" IsVisible="false" />
</HexPreviewControl>