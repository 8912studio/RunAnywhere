<MainWindow 
    IsPopup="true" 
    IsSizable="false" 
    HasTitleBar="false" 
    IsToolWindow="true"
    InitialRectStyle="CenterInScreen"
    Size="600,50">
    
    <MainWindow.RootControl>
        <VerticalBox Padding="15,10,15,10" BackgroundColor="White" />
    </MainWindow.RootControl>
    
    <TextBox 
        Name="inputTextBox"
        FixedHeight="30" 
        Border="0"
        FontSize="20"
        ParagraphAlignment="Center"
        AcceptReturn="false" />

    <PreviewView Name="previewView" IsVisible="false" />
</MainWindow>