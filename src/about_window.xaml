<AboutWindow 
    ContentSize="400,300" 
    IsSizable="false" 
    CanMaximize="false"
    Title="About RunAnywhere">
    
    <AboutWindow.RootControl>
        <VerticalBox BackgroundColor="White" />
    </AboutWindow.RootControl>

    <HorizontalBox FixedHeight="64" Margin="70,61,0,0">
        <Control 
            FixedWidth="64"
            FixedHeight="64"
            BackgroundImage="res:///resource/logo_about.png" 
            BackgroundImageLayout="Stretch"/>
        <Label 
            TextAlignment="Leading" 
            ParagraphAlignment="Center" 
            Text="RunAnywhere">
            <Label.Font Size="26" Weight="SemiBold" />
        </Label>
    </HorizontalBox>

    <Label 
        Name="versionLabel"
        FixedHeight="20"
        Margin="0,10,0,0"
        TextAlignment="Center" 
        ParagraphAlignment="Center" 
        FontSize="14"
        Text="0.0.0"/>

    <Control FixedHeight="20" Margin="0,80,0,0">
        <Control.Layouter>
            <HorizontalLayouter AxisAlignment="Center" />
        </Control.Layouter>
        <Button 
            Name="githubButton"
            BackgroundColor="Transparent"
            Border="0"
            CanFocused="false"
            TextAlignment="Center" 
            ParagraphAlignment="Center" 
            Text="Visit on github">
            
            <Button.Font Size="12" HasUnderline="true" />
        </Button>
    </Control>

    <Label 
        FixedHeight="20"
        Margin="0,10,0,0"
        TextAlignment="Center" 
        ParagraphAlignment="Center" 
        FontSize="12"
        Text="Copyright © 2022 Zplutor. All rights reserved."/>
</AboutWindow>