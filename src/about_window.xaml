<AboutWindow 
    ContentSize="400,300" 
    IsSizable="false" 
    CanMaximize="false"
    Title="About RunAnywhere">
    
    <AboutWindow.RootControl>
        <VerticalBox BackgroundColor="White" />
    </AboutWindow.RootControl>

    <HorizontalBox FixedHeight="64" Margin="70,61,0,0">
        <Control 
            FixedWidth="64"
            FixedHeight="64"
            BackgroundImage="res:///resource/logo_about.png" 
            BackgroundImageLayout="Stretch"/>
        <Label 
            TextAlignment="Leading" 
            ParagraphAlignment="Center" 
            Text="RunAnywhere">
            <Label.Font Size="26" Weight="SemiBold" />
        </Label>
    </HorizontalBox>

    <Label 
        Name="versionLabel"
        FixedHeight="20"
        Margin="0,10,0,0"
        TextAlignment="Center" 
        ParagraphAlignment="Center" 
        FontSize="14"
        Text="0.0.0"/>

    <Control FixedHeight="20" Margin="0,80,0,0">
        <Control.Layouter>
            <HorizontalLayouter AxisAlignment="Center" CrossAxisAlignment="Center" />
        </Control.Layouter>
        <LinkButton Name="githubButton" Text="Visit on github"/>
        <Control FixedSize="1,10" Margin="10,2,10,0" BackgroundColor="Gray" />
        <LinkButton Name="licenseButton" Text="View license" />
    </Control>

    <Label 
        FixedHeight="20"
        Margin="0,10,0,0"
        TextAlignment="Center" 
        ParagraphAlignment="Center" 
        FontSize="12"
        Text="Copyright © 2023 Zplutor. All rights reserved."/>
</AboutWindow>