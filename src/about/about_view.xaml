<AboutView Layouter="VerticalLayouter" FixedHeight="210">
    
    <HorizontalBox FixedHeight="64" Margin="0,20,20,0" AxisAlignment="Center">
        <Control 
            FixedWidth="64"
            FixedHeight="64"
            BackgroundImage="res:///resource/logo_about.png" 
            BackgroundImageLayout="Stretch"/>
        <Label 
            AutoWidth="true"
            TextAlignment="Leading" 
            ParagraphAlignment="Center" 
            Text="RunAnywhere">
            <Label.Font Size="26" Weight="SemiBold" />
        </Label>
    </HorizontalBox>

    <Label 
        Name="versionLabel"
        FixedHeight="20"
        Margin="0,10,0,0"
        TextAlignment="Center" 
        ParagraphAlignment="Center" 
        FontSize="14"
        Text="0.0.0"/>

    <Control FixedHeight="20" Margin="0,40,0,0">
        <Control.Layouter>
            <HorizontalLayouter AxisAlignment="Center" CrossAxisAlignment="Center" />
        </Control.Layouter>
        <LinkButton Name="githubButton" Text="Visit on github"/>
        <Control FixedSize="1,10" Margin="10,2,10,0" BackgroundColor="Gray" />
        <LinkButton Name="licenseButton" Text="View license" />
    </Control>

    <Label 
        FixedHeight="20"
        Margin="0,10,0,0"
        TextAlignment="Center" 
        ParagraphAlignment="Center" 
        FontSize="12"
        Text="Copyright © 2023 Zplutor. All rights reserved."/>
</AboutView>