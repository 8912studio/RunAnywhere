<HelpWindow 
    Size="320,400"
    InitialRectStyle="Custom"
    ActivateOption="NoActivate">

    <HelpWindow.RootControl>
        <ScrollableControl 
            BackgroundColor="White" 
            Border="0,0,0,0"
            AllowHorizontalScroll="false"
        />
    </HelpWindow.RootControl>
    <Control 
        Name="scrollButtonContainer" 
        AutoSize="true" 
        Layouter="HorizontalLayouter"
        IsVisible="false">
        <Control
            Name="lineDownButton"
            FixedWidth="24" 
            FixedHeight="24"
            BackgroundImage="res:///resource/line_down.png"
            Tooltip="Scroll line down (Ctrl+J)"
        />
		<Control
            Name="lineUpButton"
            FixedWidth="24" 
            FixedHeight="24"
            Margin="4,0,0,0"
            BackgroundImage="res:///resource/line_up.png"
            Tooltip="Scroll line up (Ctrl+K)"
        />
		<Control
            Name="pageDownButton"
            FixedWidth="24" 
            FixedHeight="24"
            Margin="4,0,0,0"
            BackgroundImage="res:///resource/page_down.png"
            Tooltip="Scroll page down (Ctrl+N)"
        />
		<Control
            Name="pageUpButton"
            FixedWidth="24" 
            FixedHeight="24"
            Margin="4,0,0,0"
            BackgroundImage="res:///resource/page_up.png"
            Tooltip="Scroll page up (Ctrl+U)"
        />
    </Control>
</HelpWindow>