<HistoryCommandView 
    Layouter="VerticalLayouter" 
    AutoHeight="true"
    Padding="0,0,0,6">
    <Control FixedHeight="1" Margin="15,0,15,6" BackgroundColor="#DDDDDD" />
    <HorizontalBox Padding="15,0,15,0" AutoHeight="true" CrossAxisAlignment="Center">
        <Control 
            FixedSize="8,16"
            BackgroundImage="res:///resource/history_command.png"
            BackgroundImageLayout="Stretch" />
        <RichEdit 
            Name="commandEdit" 
            FixedHeight="24"
            Margin="8,0,0,0"
            IsReadOnly="true"
            Border="0"
            BackgroundColor="Transparent"
            FontSize="14"
            ParagraphAlignment="Center" />
        <HorizontalBox Name="toolBar" AutoSize="true" IsVisible="false">
            <Button 
                Name="closeButton" 
                FixedSize="20,20" 
                CanFocused="false" />
        </HorizontalBox>
    </HorizontalBox>
    <VerticalBox Name="previewContainer" AutoHeight="true" />
</HistoryCommandView>