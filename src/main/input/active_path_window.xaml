<ActivePathWindow>
    
    <ActivePathWindow.RootControl>
        <VerticalBox BackgroundColor="White" />
    </ActivePathWindow.RootControl>

    <HorizontalBox 
        Name="container" 
        Padding="12,0,12,0"
        CrossAxisAlignment="Center" >

        <Label 
            Name="label" 
            FixedWidth="38" 
            ParagraphAlignment="Center" 
            TextColor="#EB984E"
            Text="@=">
            <Label.Font FamilyName="Microsoft YaHei UI" Size="20" Weight="Bold" />
        </Label>

		<ScrollBox
            Name="scrollContainer" 
            Border="0" 
            Margin="2,12,0,0"
            AllowVerticalScroll="false"
            ScrollBarThickness="10">

			<ScrollBox.VerticalScrollBar>
                <ThinScrollBar />
            </ScrollBox.VerticalScrollBar>

			<ScrollBox.HorizontalScrollBar>
                <ThinScrollBar />
            </ScrollBox.HorizontalScrollBar>

			<ScrollBox.ScrollContent>
                <TextBox 
                    Name="edit" 
                    Border="0"
                    IsMultiline="false"
                    ParagraphAlignment="Center"
                    FontSize="14"
                    BackgroundColor="Transparent" />
            </ScrollBox.ScrollContent>
        </ScrollBox>

    </HorizontalBox>

</ActivePathWindow>