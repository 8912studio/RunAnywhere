<ArgumentObjectWindow ContentSize="400,300">

    <ArgumentObjectWindow.RootControl>
        <VerticalBox BackgroundColor="White" />
    </ArgumentObjectWindow.RootControl>

    <VerticalBox Name="header" AutoHeight="true" Padding="12,12,12,8" BackgroundColor="#f2f2f2">
        <Label 
            Name="titleLabel"
            FixedHeight="20"
            FontSize="18"
            ParagraphAlignment="Center"
            IsVisible="false" />
        <HorizontalBox Name="lineBreakOptions" AutoHeight="true">
            <LineBreakOption 
                Name="useCRLF" 
                Text="\r\n" 
                Tooltip="Use \r\n as line breaks" />
            <LineBreakOption 
                Name="useCR" 
                Margin="8,0,0,0" 
                Text="\r" 
                Tooltip="Use \r as line breaks" />
            <LineBreakOption 
                Name="useLF" 
                Margin="8,0,0,0" 
                Text="\n" 
                Tooltip="Use \n as line breaks"/>
        </HorizontalBox>
    </VerticalBox>

    <ScrollableControl 
        Name="scrollableControl" 
        Border="0" 
        Padding="8,8,8,8"
        ScrollBarThickness="10">

        <ScrollableControl.VerticalScrollBar>
            <ThinScrollBar />
        </ScrollableControl.VerticalScrollBar>

        <ScrollableControl.HorizontalScrollBar>
            <ThinScrollBar />
        </ScrollableControl.HorizontalScrollBar>

        <ScrollableControl.ScrollContent>
            <RichEdit
                Name="textEdit"
                Border="0"
                Padding="4,4,4,4"
                IsMultiline="true"
                FontSize="14"
                ParagraphAlignment="Center"
				BackgroundColor="Transparent"
            />
        </ScrollableControl.ScrollContent>
    </ScrollableControl>
    
</ArgumentObjectWindow>