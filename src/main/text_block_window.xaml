<TextBlockWindow ContentSize="400,300">
    
    <TextBlockWindow.RootControl>
        <VerticalBox BackgroundColor="White" />
    </TextBlockWindow.RootControl>

    <HorizontalBox Name="lineBreakOptions" FixedHeight="20" Margin="12,12,0,0">
        <LineBreakOption Name="useCRLF" Text="\r\n" />
        <LineBreakOption Name="useCR" Margin="8,0,0,0" Text="\r" />
        <LineBreakOption Name="useLF" Margin="8,0,0,0" Text="\n" />
    </HorizontalBox>

    <ScrollableControl 
        Name="scrollableControl" 
        Border="0" 
        Padding="8"
        ScrollBarThickness="10">

        <ScrollableControl.VerticalScrollBar>
            <ThinScrollBar />
        </ScrollableControl.VerticalScrollBar>

        <ScrollableControl.HorizontalScrollBar>
            <ThinScrollBar />
        </ScrollableControl.HorizontalScrollBar>

        <ScrollableControl.ScrollContent>
            <RichEdit
                Name="textEdit"
                Border="0"
                Padding="4,4,4,4"
                IsMultiline="true"
                FontSize="14"
                ParagraphAlignment="Center"
            />
        </ScrollableControl.ScrollContent>
    </ScrollableControl>
    
</TextBlockWindow>