<PreservedCommandView 
    Layouter="VerticalLayouter" 
    AutoHeight="true"
    Padding="0,0,0,6">
    <Control FixedHeight="1" Margin="10,0,10,6" BackgroundColor="#DDDDDD" />
    <HorizontalBox Padding="15,0,10,0" AutoHeight="true" CrossAxisAlignment="Center">
        <Control 
            FixedSize="8,16"
            BackgroundImage="res:///resource/preserved_command.png"
            BackgroundImageLayout="Stretch" />
        <CommandInputEdit 
            Name="commandEdit" 
            FixedHeight="24"
            Margin="8,0,0,0"
            IsReadOnly="true"
            Border="0"
            BackgroundColor="Transparent"
            FontSize="14"
            ParagraphAlignment="Center" />
        <CommandToolbar Name="toolbar" AutoSize="true" IsVisible="false" />
    </HorizontalBox>
    <VerticalBox Name="previewContainer" AutoHeight="true" />
</PreservedCommandView>