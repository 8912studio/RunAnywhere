<MainWindow 
    IsTopmost="true"
    InitialRectStyle="Custom"
    Size="600,60">
    
    <MainWindow.RootControl>
        <VerticalBox BackgroundColor="White" />
    </MainWindow.RootControl>

    <VerticalBox 
        Name="historyCommandsView"
        AutoHeight="true" 
        BackgroundColor="#F5F5F5"
        IsVisible="false" />
    
    <HorizontalBox FixedHeight="58" Padding="5,10,15,0" >
        <Control 
            FixedWidth="40" 
            FixedHeight="40"
            BackgroundImage="res:///resource/logo_main.png" 
            BackgroundImageLayout="Stretch"/>
        <CommandInputEdit 
            Name="inputEdit"
            FixedHeight="40" 
            Margin="4,0,0,0"
            Border="0"
            FontSize="22" />
        <Control 
            Name="helpButton"
            FixedWidth="20" 
            FixedHeight="20"
            Margin="15,10,0,0"
            BackgroundImage="res:///resource/help_inactive.png"
            Tooltip="Show/Hide help content (Ctrl+/)" />
    </HorizontalBox>

    <PreviewView Name="previewView" IsVisible="false" />

    <HorizontalBox
        Name="toolbar" 
        FixedHeight="24"
        Padding="15,0,15,0"
        AxisAlignment="End"
        CrossAxisAlignment="Center"
        BackgroundColor="#F5F5F5"
        IsVisible="false">

        <ToolBarButton 
            Name="executeButton"
            ImageName="execute" 
            Tooltip="Execute current command (ENTER)" />

        <ToolBarButton 
            Name="preserveButton"
            Margin="8,0,0,0"
            ImageName="preserve" 
            Tooltip="Preserve current command (SHIFT+ENTER)" />
        
    </HorizontalBox>
</MainWindow>