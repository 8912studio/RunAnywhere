<CodeBlockRegion Layouter="VerticalLayouter" Padding="10,4,10,2">
    <HorizontalBox Name="header" FixedHeight="20" Marging="0,0,0,4" CrossAxisAlignment="Center">
        <Label 
            Name="languageLabel" 
            AutoWidth="true"
            ParagraphAlignment="Center"
			FontFamily="Consolas"
            FontSize="14"
			TextColor="#999999"/>
        <Control />
        <ToolbarButton 
			Name="copyButton"
			ImageName="copy" 
	        Tooltip="Copy code to clipboard" 
			IsVisible="false" />
    </HorizontalBox>
    
    <ThinScrollControl 
        Name="scrollControl" 
		Margin="0,6,0,0"
        AllowVerticalScroll="false"
        AutoHideScrollBars="true">
        
        <ThinScrollControl.ScrollContent>
            <StyledTextBox 
                Name="textBox"
                Padding="0,0,0,8" 
                WordWrapping="NoWrap"
                IsEnabled="false" />
        </ThinScrollControl.ScrollContent>
    </ThinScrollControl>
</CodeBlockRegion>